# Production Environment Configuration Template
# Copy this to .env on your production server and fill in the values
# NEVER commit .env files to version control

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_NAME="Lara4"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://yourdomain.com

# Localization
APP_LOCALE=en
APP_LOCALES=en,es,fr,ar
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance & Logging
APP_MAINTENANCE_DRIVER=file
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Disable location testing in production
LOCATION_TESTING=false

# ============================================
# SECURITY SETTINGS
# ============================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.yourdomain.com
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# Force HTTPS
FORCE_HTTPS=true

BCRYPT_ROUNDS=12

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=production_database
DB_USERNAME=production_user
DB_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD

# ============================================
# CACHE & QUEUE
# ============================================
CACHE_STORE=redis
CACHE_PREFIX=lara4_prod

QUEUE_CONNECTION=redis

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# ============================================
# BROADCAST & FILESYSTEM
# ============================================
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# Media Library (if using S3 or spaces for media)
MEDIA_DISK="media"

# ============================================
# MAIL CONFIGURATION
# ============================================
# Production mail settings (e.g., Mailgun, SendGrid, SES, SMTP)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# AWS CONFIGURATION (if using S3)
# ============================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================
# VITE
# ============================================
VITE_APP_NAME="${APP_NAME}"

# ============================================
# BACKUP CONFIGURATION
# ============================================
BACKUP_DISK=s3
# or use: digitalocean, wasabi, etc.

# ============================================
# LOG VIEWER
# ============================================
LOG_VIEWER_ENABLED=true
# Ensure log viewer is protected by auth middleware

# ============================================
# SOCIAL LOGIN PROVIDERS
# ============================================
# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://yourdomain.com/login/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=https://yourdomain.com/login/github/callback

# ============================================
# MONITORING & ERROR TRACKING (Optional)
# ============================================
# Sentry
# SENTRY_LARAVEL_DSN=

# ============================================
# RATE LIMITING (Optional)
# ============================================
# Customize rate limits if needed
# THROTTLE_LOGIN=5,1
# THROTTLE_API=60,1

# ============================================
# NOTES FOR DEPLOYMENT
# ============================================
# After copying this file to .env:
# 1. Generate APP_KEY: php artisan key:generate
# 2. Set strong DB_PASSWORD (16+ characters)
# 3. Configure mail settings
# 4. Set up AWS/S3 credentials if using cloud storage
# 5. Configure social login credentials
# 6. Run: php artisan config:cache
# 7. Run: php artisan route:cache
# 8. Run: php artisan view:cache
# 9. Set file permissions: chmod 600 .env
# 10. Verify security: curl https://yourdomain.com/.env (should return 404)
